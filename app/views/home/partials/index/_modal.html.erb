<!-- Modal for Results -->
<div class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4"
    data-sobri-target="modal"
    data-action="click->sobri#closeModal">
  <div class="modal-content bg-white rounded-xl max-w-2xl w-full max-h-96 overflow-y-auto transform scale-95 opacity-0 transition-all duration-200"
      data-action="click->sobri#stopPropagation">
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
      <h3 class="text-lg font-semibold text-gray-900">Analysis Results</h3>
      <button type="button"
              class="text-gray-400 hover:text-gray-600 transition-colors cursor-pointer"
              data-action="click->sobri#closeModal">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="p-6" data-sobri-target="modalContent">
      <!-- Results will be populated here -->
    </div>
  </div>
</div>
